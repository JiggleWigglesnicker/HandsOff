<Page
    x:Class="HandsOff.SimulationExecution"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HandsOff"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="SaddleBrown">

    <Grid
        Background="LightSlateGray"
        Margin="30"
        x:Name="MatchGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.Column="0">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="MatchList1" Grid.Column="0">


                </StackPanel>

                <StackPanel x:Name="MatchList2" Grid.Column="1">


                </StackPanel>

                <StackPanel x:Name="MatchList3" Grid.Column="2">


                </StackPanel>


            </Grid>
        </ScrollViewer>
        
        <TextBlock 
           Text="Progress of all matches"
            FontSize="40"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Width="1000"
            Height="100"
            Margin="800,0,0,90"
            />
        
        <ProgressBar 
            x:Name="AllBar"
            Minimum="0"
            Maximum="100"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Width="1000"
            Height="100"
            Margin="0,0,0,40"
            />

        <Button
            Click="StartSim_Click"
            Grid.Column="0"
            Grid.Row="1"
            Background="White"
            Foreground="Black"
            FontSize="25"
            Content="Start simulation!"
            Height="50"
            Width="300"
            Margin="297,0,0,0"
            />

        <Button
            Height="135"
            Width="150"
            Margin="39,0,0,0"
            Click="Back_Click"
            IsEnabled="{x:Bind Frame.CanGoBack, Mode=OneWay}" Grid.Row="1"
            >
            <StackPanel>
                <Image 
                    Source="Assets\ArrowBlack.png"
                    Height="70"/>
                <TextBlock 
                    Text="Back"
                    FontSize="35"
                    Height="40"/>
            </StackPanel>
        </Button>

    </Grid>

</Page>
