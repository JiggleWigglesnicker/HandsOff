<Page
    x:Class="HandsOff.SimulationExecution"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HandsOff"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="SaddleBrown">

    <Grid
        Background="LightSlateGray"
        Margin="30"
        x:Name="MatchGrid">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.Column="0">

            <StackPanel x:Name="MatchList">
             
                <ListView HorizontalAlignment="Center"
                          Width="350">
                    
                    <TextBlock
                        Foreground="White"
                        FontSize="45"
                        HorizontalAlignment="Center"
                        Text="Match 1"
                        Height="50"
                        Width="200"
                        Margin="0,50,0,0"
                        />
                    
                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Team1 vs Team2"
                        Height="50"
                        Width="250"
                        Margin="0,20,0,10"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Progress"
                        Height="50"
                        Width="250"
                        Margin="0,10,0,0"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="+##########+"
                        Height="50"
                        Width="250"
                        Margin="0,0,0,20"
                        />


                </ListView>

                <ListView HorizontalAlignment="Center"
                          Width="350">

                    <TextBlock
                        Foreground="White"
                        FontSize="45"
                        HorizontalAlignment="Center"
                        Text="Match 1"
                        Height="50"
                        Width="200"
                        Margin="0,50,0,0"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Team1 vs Team2"
                        Height="50"
                        Width="250"
                        Margin="0,20,0,10"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Progress"
                        Height="50"
                        Width="250"
                        Margin="0,10,0,0"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="+##########+"
                        Height="50"
                        Width="250"
                        Margin="0,0,0,20"
                        />


                </ListView>

                <ListView HorizontalAlignment="Center"
                          Width="350">

                    <TextBlock
                        Foreground="White"
                        FontSize="45"
                        HorizontalAlignment="Center"
                        Text="Match 1"
                        Height="50"
                        Width="200"
                        Margin="0,50,0,0"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Team1 vs Team2"
                        Height="50"
                        Width="250"
                        Margin="0,20,0,10"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="Progress"
                        Height="50"
                        Width="250"
                        Margin="0,10,0,0"
                        />

                    <TextBlock
                        Foreground="White"
                        FontSize="35"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Text="+##########+"
                        Height="50"
                        Width="250"
                        Margin="0,0,0,20"
                        />


                </ListView>

            </StackPanel>

        </ScrollViewer>

        <Button
            Click="StartSim_Click"
            Grid.Column="0"
            Grid.Row="2"
            Background="White"
            Foreground="Black"
            FontSize="25"
            VerticalAlignment="Top"
            Content="Start simulation"
            Height="50"
            Width="300"
            Margin="100,120,0,0"
            />
        
    </Grid>

</Page>
